Options -Indexes

<FilesMatch "^(DB_connection\.php|\.env|composer\.(json|lock)|package(-lock)?\.json|yarn\.lock)$">
    Require all denied
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Block direct web access to internal include directory
    RewriteRule ^inc/ - [F,L]

    # Block direct web access to internal model directory
    RewriteRule ^app/Model/ - [F,L]
</IfModule>

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Reduce PHP version exposure (works when PHP is loaded as Apache module)
<IfModule mod_php.c>
    php_flag expose_php Off
    php_value session.cookie_httponly 1
    php_value session.cookie_samesite Lax
    php_value session.use_strict_mode 1
    php_value session.use_only_cookies 1
</IfModule>
